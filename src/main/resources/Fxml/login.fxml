<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.sms.Controllers.LoginController">
    <VBox alignment="CENTER" fillWidth="false" layoutX="50" layoutY="122.0" pickOnBounds="false" prefHeight="308.0" prefWidth="449.0" snapToPixel="false" spacing="12.0">
        <Label alignment="CENTER" prefHeight="30.0" prefWidth="400.0" style="-fx-font-size: 24px;" text="Login" />
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="400.0" spacing="10.0">
         <children>
              <Label text="Username" />
              <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="240.0" promptText="username or email" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="400.0" spacing="10.0">
         <children>
            <Label text="Password" />
              <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="240.0" promptText="password" />
         </children>
      </HBox>
        <Label fx:id="errorLabel" prefHeight="35.0" prefWidth="165.0">
         <graphic>
            <ImageView fx:id="imageError" fitHeight="28.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images_and_icons/4838288821678942373-128.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="System Bold" size="10.0" />
         </font></Label>
        <HBox prefWidth="150.0" spacing="10">
            <Button fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" onAction="#handleLogin" prefHeight="25.0" prefWidth="173.0" styleClass="btnLogout" stylesheets="@../Styles/Teacher/teacher.css" text="Login" />
        </HBox>
    </VBox>
   <ImageView fitHeight="137.0" fitWidth="150.0" layoutX="75.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../images_and_icons/2176597581715247275-128.png" />
      </image>
   </ImageView>
   <Label layoutX="220.0" layoutY="48.0" text="School Management System">
      <font>
         <Font name="System Bold" size="27.0" />
      </font>
   </Label>
   <Label layoutX="227.0" layoutY="87.0" text="made for simple and easy use" textFill="#ee1912">
      <font>
         <Font name="System Bold" size="16.0" />
      </font>
   </Label>

</AnchorPane>
