     <HBox alignment="CENTER_LEFT" layoutX="24.0" layoutY="14.0" spacing="15.0">
      <Label text="Academic Year">
         <HBox.margin>
            <Insets left="10.0" right="-8.0" />
         </HBox.margin>
      </Label>
      <ComboBox fx:id="academicYearComboBox" layoutX="178.0" layoutY="10.0" prefHeight="25.0" prefWidth="131.0" promptText="Academic Year" />
      <Label layoutX="382.0" layoutY="55.0" text="Grade">
         <HBox.margin>
            <Insets left="10.0" right="-8.0" />
         </HBox.margin>
      </Label>
         <ComboBox fx:id="gradeComboBox" prefHeight="25.0" prefWidth="99.0" promptText="Grade" />
      <Label layoutX="425.0" layoutY="55.0" text="Section">
         <HBox.margin>
            <Insets left="10.0" right="-8.0" />
         </HBox.margin>
      </Label>
      <ComboBox fx:id="sectionComboBox" layoutX="107.0" layoutY="45.0" prefHeight="25.0" prefWidth="85.0" promptText="Section" />
      <padding>
         <Insets top="45.0" />
      </padding>
     </HBox>
   <HBox alignment="CENTER_LEFT" layoutX="34.0" layoutY="57.0" prefHeight="81.0" prefWidth="610.0">
      <padding>
         <Insets top="35.0" />
      </padding>
      <children>
         <Label prefHeight="21.0" prefWidth="160.0" text="Search Teacher by name">
            <font>
               <Font size="14.0" />
            </font>
            <padding>
               <Insets left="2.0" />
            </padding>
         </Label>
         <TextField fx:id="searchStudentField" prefHeight="25.0" prefWidth="196.0" promptText="Search by name or ID" />
         <Button fx:id="searchBtn" prefHeight="25.0" prefWidth="113.0" text="Search">
            <HBox.margin>
               <Insets left="12.0" />
            </HBox.margin></Button>
         <Button fx:id="resetBtn" layoutX="395.0" layoutY="56.0" prefHeight="25.0" prefWidth="79.0" text="Reset">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>

    <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="479.0" prefHeight="25.0" prefWidth="983.0" spacing="10.0">
