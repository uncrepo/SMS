            <Insets left="300.0" />
         </HBox.margin>
      </Button>
      <Button fx:id="nextBtn" layoutX="297.0" layoutY="10.0" prefHeight="25.0" prefWidth="103.0" text="Next">
         <HBox.margin>
            <Insets left="10.0" />
