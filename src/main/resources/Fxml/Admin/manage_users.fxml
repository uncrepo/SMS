<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.project.sms.Controllers.Admin.AdminController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="15" style="-fx-padding: 20;">
        <Label text="Manage Users" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Tabs for User Types -->
        <TabPane fx:id="userTabPane">
            <!-- Students Tab -->
            <Tab text="Students">
                <VBox spacing="10">
                    <HBox spacing="10">
                        <Label text="Year:" />
                        <ComboBox fx:id="filterYear" />
                        <Label text="Department:" />
                        <ComboBox fx:id="filterDepartment" />
                        <Label text="Section:" />
                        <ComboBox fx:id="filterSection" />
                        <Button text="Apply Filters" onAction="#filterStudents" />
                    </HBox>
                    <TableView fx:id="studentsTable">
                        <columns>
                            <TableColumn text="ID" fx:id="colStudentId" />
                            <TableColumn text="Name" fx:id="colStudentName" />
                            <TableColumn text="Year" fx:id="colStudentYear" />
                            <TableColumn text="Department" fx:id="colStudentDept" />
                            <TableColumn text="Section" fx:id="colStudentSection" />
                            <TableColumn text="Status" fx:id="colStudentStatus" />
                            <TableColumn text="Actions" fx:id="colStudentActions" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Teachers Tab -->
            <Tab text="Teachers">
                <TableView fx:id="teachersTable">
                    <columns>
                        <TableColumn text="ID" fx:id="colTeacherId" />
                        <TableColumn text="Name" fx:id="colTeacherName" />
                        <TableColumn text="Department" fx:id="colTeacherDept" />
                        <TableColumn text="Status" fx:id="colTeacherStatus" />
                        <TableColumn text="Actions" fx:id="colTeacherActions" />
                    </columns>
                </TableView>
            </Tab>

            <!-- Admins Tab -->
            <Tab text="Admins">
                <TableView fx:id="adminsTable">
                    <columns>
                        <TableColumn text="ID" fx:id="colAdminId" />
                        <TableColumn text="Name" fx:id="colAdminName" />
                        <TableColumn text="Status" fx:id="colAdminStatus" />
                        <TableColumn text="Actions" fx:id="colAdminActions" />
                    </columns>
                </TableView>
            </Tab>
        </TabPane>
    </VBox>
</AnchorPane>
