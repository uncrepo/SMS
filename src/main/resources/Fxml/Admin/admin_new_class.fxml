               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="192.0" prefWidth="400.0" spacing="22.0">
               <children>
                  <Label text="Assign Classroom" />
                  <ComboBox fx:id="assignClassroomComboBox" disable="true" prefHeight="25.0" prefWidth="125.0" promptText="Not Available" />
                  <Label text="(optional)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="192.0" prefWidth="400.0" spacing="22.0">
               <children>
                  <Label text="Assign Advisor" />
                  <ComboBox fx:id="assignAdvisorComboBox" disable="true" prefHeight="25.0" prefWidth="125.0" promptText="Not Available" />
                  <Label text="(optional)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="232.0" prefWidth="400.0" spacing="50.0">
               <children>
                  <Button fx:id="addClassBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="158.0" text="Add new Class" />
                  <Button fx:id="resetBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="92.0" text="Reset" />
               </children>
               <padding>
                  <Insets bottom="40.0" left="100.0" />
               </padding>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets top="60.0" />
         </padding>
      </VBox>
      <Label text="Add new Class">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
         <padding>
            <Insets left="20.0" top="10.0" />
         </padding>
      </Label>
   </children>
</AnchorPane>
