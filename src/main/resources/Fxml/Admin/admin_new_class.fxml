                  <Label text="(required)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="110.0" prefWidth="400.0" spacing="22.0">
               <children>
                  <Label text="Field" />
                  <RadioButton mnemonicParsing="false" text="NATURAL" />
