<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.sms.Controllers.Teacher.TeacherAssignmentController">
   <children>
      <VBox alignment="CENTER_LEFT" prefWidth="800.0" spacing="8.0">
         <children>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="140.0" prefWidth="400.0" spacing="7.0">
               <children>
                  <Label text="Academic Calendar" />
                  <ComboBox fx:id="academicYearComboBox" prefHeight="25.0" prefWidth="125.0" promptText="Academic Year" />
                  <Label text="(default)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="22.0">
               <children>
                  <Label text="Semester" />
                  <ComboBox fx:id="semesterComboBox" prefHeight="25.0" prefWidth="125.0" promptText="Semester" />
                  <Label text="(default)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="22.0">
               <children>
                  <Label text="Grade" />
                  <ComboBox fx:id="gradeComboBox" prefHeight="25.0" prefWidth="125.0" promptText="Grade" />
                  <Label text="(default)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="80.0" prefWidth="400.0" spacing="22.0">
               <children>
                  <Label text="Section" />
                  <ComboBox fx:id="sectionComboBox" prefHeight="25.0" prefWidth="125.0" promptText="Section" />
                  <Label text="(default)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="22.0">
               <children>
                  <Label text="Course" />
                  <ComboBox fx:id="courseComboBox" prefHeight="25.0" prefWidth="125.0" promptText="Course" />
                  <Label text="(default)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <VBox fx:id="TeacherAssignment" fillWidth="false" spacing="12">

               <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Create Assignment" />

               <HBox fillHeight="false" spacing="10">
                  <Label minWidth="80" text="Title:" />
                  <TextField fx:id="titleField" promptText="Enter assignment title" HBox.hgrow="ALWAYS" />
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="10">
                  <CheckBox fx:id="isFileCheck" text="File-based Assignment" />
               </HBox>

               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Label minWidth="80" text="Attach File:" />
                  <Button fx:id="attachBtn" disable="true" text="Choose File" />
                  <Label fx:id="selectedFileLabel" text="No file selected" wrapText="true" />
               </HBox>

               <VBox spacing="6">
                  <Label text="Assignment Text:" />
                  <HBox alignment="CENTER_LEFT" fillHeight="false" prefHeight="173.0" prefWidth="703.0" spacing="8.0">
                     <children>
                        <TextArea fx:id="descriptionArea" prefHeight="172.0" prefWidth="431.0" />
                        <Label text="Set Deadline">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="14.0" />
                           </HBox.margin>
                        </Label>
                        <DatePicker fx:id="grpDeadlineDate" prefHeight="25.0" prefWidth="117.0" />
                     </children>
                     <padding>
                        <Insets left="40.0" />
                     </padding>
                  </HBox>
               </VBox>

               <HBox alignment="CENTER_RIGHT" spacing="10" />

               <Label fx:id="statusLabel" prefHeight="29.0" prefWidth="333.0" textFill="green" wrapText="true" />
               <padding>
                  <Insets left="50.0" />
               </padding>

            </VBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="150.0" prefWidth="386.0" spacing="50.0">
               <children>
                  <Button fx:id="submitBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" text="Update">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></Button>
                  <Button fx:id="resetBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="115.0" text="Reset">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Button>
               </children>
               <padding>
                  <Insets bottom="40.0" left="100.0" />
               </padding>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets top="60.0" />
         </padding>
      </VBox>
      <Label text="Set Assignment for Subject">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
         <padding>
            <Insets left="20.0" top="10.0" />
         </padding>
      </Label>
   </children>
</AnchorPane>
