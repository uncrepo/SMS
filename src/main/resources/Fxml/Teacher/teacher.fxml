               <Font size="9.0" />
            </font></Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="loggedInText" prefHeight="27.0" prefWidth="235.0" style="-fx-text-fill: white; -fx-font-size: 13px;">
            <font>
               <Font size="6.0" />
            </font></Label>
            <Label fx:id="roleText" prefHeight="27.0" prefWidth="306.0" style="-fx-text-fill: white; -fx-font-size: 13px;">
