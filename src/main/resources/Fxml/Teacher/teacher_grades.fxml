<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- AnchorPane Root -->
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.project.sms.Controllers.Teacher.TeacherGradesController"
            stylesheets="@../../Styles/Teacher/teacher.css"
            styleClass="root-pane"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Header Section -->
    <VBox alignment="CENTER" spacing="10.0" styleClass="header-section">
        <children>
            <Label text="Teacher Grades Section" styleClass="header-label" />
        </children>
    </VBox>

    <!-- Content Section -->
    <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="content-section" AnchorPane.topAnchor="50.0">
        <children>
            <!-- Filters -->
            <HBox spacing="15.0" alignment="CENTER" styleClass="filter-container">
                <children>
                    <Label text="Grade:" styleClass="filter-label" />
                    <ComboBox fx:id="gradeComboBox" prefWidth="150.0" promptText="Select Grade" />
                    <Label text="Section:" styleClass="filter-label" />
                    <ComboBox fx:id="sectionComboBox" prefWidth="150.0" promptText="Select Section" />
                    <Label text="Subject:" styleClass="filter-label" />
                    <ComboBox fx:id="subjectComboBox" prefWidth="150.0" promptText="Select Subject" />
                </children>
            </HBox>

            <!-- Grades Table -->
            <TableView fx:id="gradesTableView" prefHeight="400.0" prefWidth="750.0" styleClass="grades-table">
                <columns>
                    <TableColumn fx:id="colStudentId" text="Student ID" prefWidth="150.0" />
                    <TableColumn fx:id="colStudentName" text="Student Name" prefWidth="250.0" />
                    <TableColumn fx:id="colGrade" text="Grade" prefWidth="150.0" />
                    <TableColumn fx:id="colRemarks" text="Remarks" prefWidth="200.0" />
                </columns>
            </TableView>
        </children>
    </VBox>

    <!-- Footer Section -->
    <HBox alignment="CENTER" spacing="20.0" styleClass="footer-section" AnchorPane.bottomAnchor="20.0">
        <children>
            <Button fx:id="btnSave" text="Save" styleClass="primary-button" />
            <Button fx:id="btnReset" text="Reset Filters" styleClass="secondary-button" />
            <Button fx:id="btnExport" text="Export to CSV" styleClass="secondary-button" />
        </children>
    </HBox>
</AnchorPane>