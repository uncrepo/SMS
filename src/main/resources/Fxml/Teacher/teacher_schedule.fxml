<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../../styles/admin_styles.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.project.sms.Controllers.Teacher.TeacherScheduleController">

    <VBox spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="My Teaching Schedule" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
        </HBox>

        <!-- Controls -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="control-bar">
            <VBox spacing="5">
                <Label text="Academic Year" styleClass="input-label"/>
                <ComboBox fx:id="academicYearComboBox" prefWidth="150" promptText="Select Year" styleClass="combo-box"/>
            </VBox>
            <VBox spacing="5" alignment="BOTTOM_LEFT">
                <Button fx:id="refreshBtn" styleClass="action-button, primary-button" onAction="#handleRefresh">
                    <graphic>
                        <HBox spacing="5" alignment="CENTER">
                            <FontAwesomeIconView glyphName="REFRESH" size="1.2em"/>
                            <Label text="Refresh Schedule" textFill="WHITE"/>
                        </HBox>
                    </graphic>
                </Button>
            </VBox>
        </HBox>

        <!-- Schedule Table -->
        <VBox spacing="10" VBox.vgrow="ALWAYS" styleClass="schedule-container">
            <Label text="Weekly Schedule" styleClass="section-title">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <TableView fx:id="scheduleTableView" VBox.vgrow="ALWAYS" styleClass="schedule-table">
                <columns>
                    <TableColumn fx:id="colPeriod" text="Period" prefWidth="120" styleClass="period-column"/>
                    <TableColumn fx:id="colMonday" text="Monday" prefWidth="176" styleClass="day-column"/>
                    <TableColumn fx:id="colTuesday" text="Tuesday" prefWidth="176" styleClass="day-column"/>
                    <TableColumn fx:id="colWednesday" text="Wednesday" prefWidth="176" styleClass="day-column"/>
                    <TableColumn fx:id="colThursday" text="Thursday" prefWidth="176" styleClass="day-column"/>
                    <TableColumn fx:id="colFriday" text="Friday" prefWidth="176" styleClass="day-column"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Summary Section -->
        <VBox spacing="10" styleClass="schedule-container">
            <Label text="Schedule Summary" styleClass="section-title">
                <graphic>
                    <FontAwesomeIconView glyphName="INFO_CIRCLE" size="1.2em"/>
                </graphic>
            </Label>
            <GridPane fx:id="summaryGrid" hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                </columnConstraints>
                <Label text="Total Classes:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="totalClassesLabel" text="0" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                <Label text="Total Courses:" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="totalCoursesLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Total Students:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Label fx:id="totalStudentsLabel" text="0" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            </GridPane>
        </VBox>
    </VBox>
</AnchorPane>