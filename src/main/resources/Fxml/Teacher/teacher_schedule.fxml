<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../../Styles/Admin/admin.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.sms.Controllers.Teacher.TeacherScheduleController">

    <VBox spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="page-title" text="My Teaching Schedule">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>

        <!-- Controls -->
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="control-bar">
            <VBox spacing="5">
                <Label styleClass="input-label" text="Academic Year" />
                <ComboBox fx:id="academicYearComboBox" prefWidth="150" promptText="Select Year" styleClass="combo-box" />
            </VBox>
            <VBox alignment="BOTTOM_LEFT" spacing="5">
                <Button fx:id="refreshBtn" onAction="#handleRefresh" styleClass="action-button, primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <FontAwesomeIconView glyphName="REFRESH" size="1.2em" />
                            <Label text="Refresh Schedule" textFill="WHITE" />
                        </HBox>
                    </graphic>
                </Button>
            </VBox>
        </HBox>

        <!-- Schedule Table -->
        <VBox fillWidth="false" spacing="10" styleClass="schedule-container" VBox.vgrow="ALWAYS">
            <Label styleClass="section-title" text="Weekly Schedule">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <TableView fx:id="scheduleTableView" styleClass="schedule-table">
                <columns>
                    <TableColumn fx:id="colPeriod" prefWidth="120" styleClass="period-column" text="Period" />
                    <TableColumn fx:id="colMonday" prefWidth="176" styleClass="day-column" text="Monday" />
                    <TableColumn fx:id="colTuesday" prefWidth="176" styleClass="day-column" text="Tuesday" />
                    <TableColumn fx:id="colWednesday" prefWidth="176" styleClass="day-column" text="Wednesday" />
                    <TableColumn fx:id="colThursday" prefWidth="167.0" styleClass="day-column" text="Thursday" />
                    <TableColumn fx:id="colFriday" prefWidth="137.0" resizable="false" styleClass="day-column" text="Friday" />
                </columns>
            </TableView>
        </VBox>

        <!-- Summary Section -->
        <VBox spacing="10" styleClass="schedule-container">
            <Label styleClass="section-title" text="Schedule Summary">
                <graphic>
                    <FontAwesomeIconView glyphName="INFO_CIRCLE" size="1.2em" />
                </graphic>
            </Label>
            <GridPane fx:id="summaryGrid" hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200" />
                </columnConstraints>
                <Label text="Total Classes:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="totalClassesLabel" text="0" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                <Label text="Total Courses:" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label fx:id="totalCoursesLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Total Students:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label fx:id="totalStudentsLabel" text="0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>
    </VBox>
</AnchorPane>
