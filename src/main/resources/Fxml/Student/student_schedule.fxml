<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="665.0" prefWidth="1000.0" stylesheets="@../../Styles/Admin/admin.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.sms.Controllers.Student.StudentScheduleController">

    <VBox fillWidth="false" spacing="7.0" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label styleClass="page-title" text="My Class Schedule">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>

        <!-- Controls -->
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="control-bar">
            <VBox spacing="5">
                <Label styleClass="input-label" text="Academic Year" />
                <ComboBox fx:id="academicYearComboBox" prefWidth="150" promptText="Select Year" styleClass="combo-box" />
            </VBox>
            <VBox alignment="BOTTOM_LEFT" spacing="5">
                <Button fx:id="refreshBtn" onAction="#handleRefresh" styleClass="action-button, primary-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <FontAwesomeIconView glyphName="REFRESH" size="1.2em" />
                            <Label text="Refresh Schedule" textFill="WHITE" />
                        </HBox>
                    </graphic>
                </Button>
            </VBox>
        </HBox>

        <!-- Class Info -->
        <HBox spacing="15">
            <VBox spacing="5">
                <Label text="Grade:" />
                <Label fx:id="gradeLabel" text="--" />
            </VBox>
            <VBox spacing="5">
                <Label text="Section:" />
                <Label fx:id="sectionLabel" text="--" />
            </VBox>
            <VBox spacing="5">
                <Label text="Class Teacher:" />
                <Label fx:id="classTeacherLabel" text="--" />
            </VBox>
        </HBox>

        <!-- Schedule Table -->
        <VBox spacing="10" styleClass="schedule-container" VBox.vgrow="ALWAYS">
            <Label styleClass="section-title" text="Weekly Schedule">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <TableView fx:id="scheduleTableView" prefHeight="306.0" styleClass="schedule-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colPeriod" prefWidth="120" styleClass="period-column" text="Period" />
                    <TableColumn fx:id="colMonday" prefWidth="140.0" styleClass="day-column" text="Monday" />
                    <TableColumn fx:id="colTuesday" prefWidth="170.0" styleClass="day-column" text="Tuesday" />
                    <TableColumn fx:id="colWednesday" prefWidth="176.0" styleClass="day-column" text="Wednesday" />
                    <TableColumn fx:id="colThursday" prefWidth="174.0" styleClass="day-column" text="Thursday" />
                    <TableColumn fx:id="colFriday" prefWidth="146.0" styleClass="day-column" text="Friday" />
                </columns>
            </TableView>
        </VBox>

        <!-- Course Summary -->
        <VBox spacing="10" styleClass="schedule-container">
            <Label styleClass="section-title" text="Course Summary">
                <graphic>
                    <FontAwesomeIconView glyphName="BOOK" size="1.2em" />
                </graphic>
            </Label>
            <TableView fx:id="courseSummaryTableView" prefHeight="150">
                <columns>
                    <TableColumn fx:id="colCourseName" prefWidth="200" text="Course" />
                    <TableColumn fx:id="colTeacherName" prefWidth="200" text="Teacher" />
                    <TableColumn fx:id="colTeacherEmail" prefWidth="200" text="Contact" />
                    <TableColumn fx:id="colClassesPerWeek" prefWidth="100" text="Classes/Week" />
                </columns>
            </TableView>
        </VBox>
    </VBox>
</AnchorPane>
