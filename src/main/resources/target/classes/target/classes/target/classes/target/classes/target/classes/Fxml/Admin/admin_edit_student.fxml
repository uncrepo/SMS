                      <TableColumn fx:id="colFullName" editable="false" prefWidth="147.0" resizable="false" sortable="false" text="Student's Name" />
                  <TableColumn fx:id="colEmail" editable="false" prefWidth="173.0" resizable="false" sortable="false" text="Email" />
                      <TableColumn fx:id="colPhone" editable="false" prefWidth="93.0" resizable="false" sortable="false" text="Phone" />
                      <TableColumn fx:id="colGuardian" editable="false" prefWidth="100.0" resizable="false" sortable="false" text="Guardian" />
