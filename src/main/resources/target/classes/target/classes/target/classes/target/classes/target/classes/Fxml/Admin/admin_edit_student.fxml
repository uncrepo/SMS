                      <!--                        </TableCell>-->
                      <!--                    </Callback>-->
                      <!--                </cellFactory>-->
                      <!--            </TableColumn>-->
                  </columns>
              </TableView>
            <padding>
               <Insets top="31.0" />
            </padding>
          </VBox>
         <VBox prefWidth="400.0" spacing="20.0">
            <children>
               <HBox spacing="30.0">
                  <children>
                     <Button fx:id="editBtn" alignment="CENTER" prefHeight="25.0" prefWidth="77.0" text="Edit">
                        <HBox.margin>
                           <Insets left="37.0" />
                        </HBox.margin>
                     </Button>
                      <Button fx:id="deleteStudentBtn" alignment="CENTER" prefWidth="100" text="Delete" />
                  </children>
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefWidth="200.0" spacing="10.0">
                  <children>
                     <Label text="Selected Student :">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                     <TextField fx:id="selectedStudentNameField" editable="false" prefHeight="25.0" prefWidth="199.0" promptText="student's name" />
                  </children>
               </HBox>
               <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="55.0" prefWidth="200.0" spacing="10.0">
                  <children>
                     <Label text="Selected Student ID :">
                        <font>
