               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="22.0">
               <children>
                  <Label text="Semester" />
                  <ComboBox fx:id="semesterComboBox" prefHeight="25.0" prefWidth="125.0" promptText="Semester" />
