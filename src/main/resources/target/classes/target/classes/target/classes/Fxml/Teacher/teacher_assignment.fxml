               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="190.0" prefWidth="400.0" spacing="10.0">
               <children>
                  <Label text="Set Group Assignment" />
                  <TextArea fx:id="groupAsgnField" prefHeight="160.0" prefWidth="315.0" />
                  <Label text="(optional)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="192.0" prefWidth="400.0" spacing="8.0">
               <children>
                  <Label text="Set Deadline">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Label>
                  <DatePicker fx:id="deadlineField" prefHeight="25.0" prefWidth="117.0" />
                  <Label text="(optional)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="232.0" prefWidth="400.0" spacing="50.0">
               <children>
                  <Button fx:id="updateAsgnBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" text="Update" />
