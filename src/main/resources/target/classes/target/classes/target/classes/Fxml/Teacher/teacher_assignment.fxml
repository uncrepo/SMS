               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="22.0">
               <children>
                  <Label text="Course" />
                  <ComboBox fx:id="courseComboBox" prefHeight="25.0" prefWidth="125.0" promptText="Course" />
                  <Label text="(default)" />
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="192.0" prefWidth="400.0" spacing="10.0">
